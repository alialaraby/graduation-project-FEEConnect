<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_page"
    tools:context="com.alisakralaraby.feeconnectdemo2.PaperWorkActivity">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <WebView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:visibility="invisible"
                    android:padding="10dp"
                    android:textSize="16sp"
                    android:id="@+id/webViewVisitors"/>
            </ScrollView>
        </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        android:id="@+id/visitorsRelativeLayout"
        android:layout_gravity="right|top">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="54dp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            >

            <Button
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginRight="5dp"
                android:id="@+id/btnAboutFEE"
                android:text="About Fee"
                android:textColor="@android:color/white"
                android:background="@color/colorPrimary" />

            <Button
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_margin="2dp"
                android:elevation="15dp"
                android:id="@+id/btnAboutFEEDepartments"
                android:textColor="@android:color/white"
                android:text="Fee Departments"
                android:background="@color/colorPrimary" />
        </LinearLayout>

    </RelativeLayout>

</FrameLayout>
